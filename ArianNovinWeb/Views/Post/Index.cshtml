@using System.Security.Claims
@model ArianNovinWeb.ViewModels.PostIndexViewModel

@{
    ViewData["Title"] = "Post Details";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container">
    @if (Model.ShowShareButton)
    {
        <div class="text-center mt-5">
            <h2>No Posts Available</h2>
            <p>Be the first to share a post!</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Create" class="btn btn-primary">Share Post</a>
            }
            else
            {
                <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Post")" class="btn btn-primary">Share Post</a>
            }
        </div>
    }
    else
    {
        <div class="mb-3">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Create" class="btn btn-primary">Create New Post</a>
            }
            else
            {
                <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Post")" class="btn btn-primary">Create New Post</a>
            }
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="post-content">
                    <h1>@Model.PostNavigation.Post.Title</h1>

                    @if (!string.IsNullOrEmpty(Model.PostNavigation.Post.ImagePath))
                    {
                        <img src="@Model.PostNavigation.Post.ImagePath" alt="Post Image" style="width: 100%; height: auto;" />
                    }
                    <p>@Model.PostNavigation.Post.Description</p>
                    <p>Created by @Model.PostNavigation.Post.Author?.UserName on @Model.PostNavigation.Post.CreateDate.ToString("g")</p>
                    <div class="post-navigation">
                        @if (Model.PostNavigation.PreviousPostId.HasValue)
                        {
                            <a asp-action="Index" asp-route-id="@Model.PostNavigation.PreviousPostId" class="btn btn-primary">Previous</a>
                        }

                        @if (Model.PostNavigation.NextPostId.HasValue)
                        {
                            <a asp-action="Index" asp-route-id="@Model.PostNavigation.NextPostId" class="btn btn-primary">Next</a>
                        }
                    </div>
                    <div class="mt-3 d-flex justify-content-between">
                        @if (User.Identity.IsAuthenticated && Model.PostNavigation.Post.AuthorId == currentUserId)
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.PostNavigation.Post.PostId" class="btn btn-outline-primary btn-sm">Edit</a>
                                <button class="btn btn-outline-danger btn-sm" onclick="deletePost('@Model.PostNavigation.Post.PostId')">Delete</button>
                            </div>
                        }
                        <a asp-action="Details" asp-route-id="@Model.PostNavigation.Post.PostId" class="btn btn-outline-info btn-sm">Details</a>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="comment-section">
                    <h3>Comments</h3>
                    <!-- Display comments -->
                    @if (Model.PostNavigation.Post.Comments.Any())
                    {
                        @foreach (var comment in Model.PostNavigation.Post.Comments)
                        {
                            @await Html.PartialAsync("_CommentPartial", comment)
                        }
                    }
                    else
                    {
                        <p>No comments yet.</p>
                    }

                    <!-- Comment form -->
                    <form asp-action="AddComment" method="post">
                        <input type="hidden" name="PostId" value="@Model.PostNavigation.Post.PostId" />
                        <div>
                            <label for="Content">Comment:</label>
                            <textarea id="Content" name="Content" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Comment</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function deletePost(postId) {
            if (confirm('Are you sure you want to delete this post?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Post")',
                    type: 'POST',
                    data: {
                        id: postId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            window.location.href = '@Url.Action("Index", "Post")'; // Redirect to the Index view
                        } else {
                            alert(response.message || 'Error deleting post');
                        }
                    },
                    error: function () {
                        alert('Error deleting post');
                    }
                });
            }
        }
    </script>
}

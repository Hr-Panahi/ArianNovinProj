@using System.Security.Claims
@model ArianNovinWeb.Models.PostNavigationViewModel

@{
    ViewData["Title"] = "Post Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="post-content">
                <h1>@Model.Post.Title</h1>
                             
                @if (!string.IsNullOrEmpty(Model.Post.ImagePath))
                {
                    <img src="@Model.Post.ImagePath" alt="Post Image" style="width: 100%; height: auto;" />
                }
                <p>@Model.Post.Description</p>
                <p>Created by @Model.Post.Author?.UserName on @Model.Post.CreateDate.ToString("g")</p>
                <div class="post-navigation">
                    @if (Model.PreviousPostId.HasValue)
                    {
                        <a asp-action="Index" asp-route-id="@Model.PreviousPostId" class="btn btn-primary">Previous</a>
                    }

                    @if (Model.NextPostId.HasValue)
                    {
                        <a asp-action="Index" asp-route-id="@Model.NextPostId" class="btn btn-primary">Next</a>
                    }
                </div>
                <div class="mt-3 d-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated && @Model.Post.AuthorId == User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier))
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Post.PostId" class="btn btn-outline-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model.Post.PostId" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    }
                    <a asp-action="Details" asp-route-id="@Model.Post.PostId" class="btn btn-outline-info btn-sm">Details</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="comment-section">
                <h3>Comments</h3>
                <!-- Display comments -->
                @if (Model.Post.Comments.Any())
                {
                    @foreach (var comment in Model.Post.Comments)
                    {
                        @await Html.PartialAsync("_CommentPartial", comment)
                    }
                }
                else
                {
                    <p>No comments yet.</p>
                }

                <!-- Comment form -->
                <form asp-action="AddComment" method="post">
                    <input type="hidden" name="PostId" value="@Model.Post.PostId" />
                    <div>
                        <label for="Content">Comment:</label>
                        <textarea id="Content" name="Content" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Comment</button>
                </form>
            </div>
        </div>
    </div>
</div>

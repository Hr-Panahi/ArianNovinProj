@model ArianNovinWeb.ViewModels.EditUserRolesViewModel

<h2>Edit User Roles</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="AvailableRoles" class="control-label"></label>
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="SelectedRoles" value="@role" @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                    @role
                </label>
            </div>
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
